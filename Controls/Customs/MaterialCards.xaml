            <lvc:CartesianChart Name="TimePowerChart" Grid.Row="1" Margin="10, 0, 10, 20" Hoverable="False" DataTooltip="{x:Null}">
                <lvc:CartesianChart.Series>
                    <lvc:ColumnSeries Values="5,9,8,6,1,5,7,3,6,3,5,9"/>
                </lvc:CartesianChart.Series>
            </lvc:CartesianChart>
